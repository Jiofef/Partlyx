<Application x:Class="Partlyx.UI.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Partlyx.UI.WPF"
             xmlns:conv="clr-namespace:Partlyx.UI.WPF.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:core="using:Microsoft.Xaml.Behaviors.Core"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/DefaultResources.xaml"/>
                <ResourceDictionary Source="/Styles/CommonStylesDictionary.xaml"/>
                <ResourceDictionary Source="Styles/FavsScrollViewer.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
