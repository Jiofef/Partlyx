<Application x:Class="Partlyx.UI.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Partlyx.UI.WPF"
             xmlns:vmo="clr-namespace:Partlyx.ViewModels.UIObjectViewModels;assembly=Partlyx.ViewModels"
             xmlns:dialogs="clr-namespace:Partlyx.UI.WPF.DialogsXAML"
             xmlns:conv="clr-namespace:Partlyx.UI.WPF.Converters"
             xmlns:beh="clr-namespace:Partlyx.UI.WPF.Behaviors"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
             xmlns:ddlocal="clr-namespace:Partlyx.UI.WPF.DragAndDrop"
             xmlns:core="using:Microsoft.Xaml.Behaviors.Core">
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- DataTemplates -->
            <DataTemplate DataType="{x:Type vmo:ComponentCreateViewModel}">
                <dialogs:ComponentCreate/>
            </DataTemplate>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisConv"/>
            <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConv"/>
            <conv:SelectedEqualsConverter x:Key="SelectedEqualsConv"/>

            <!-- XAML resources -->
            <ResourceDictionary.MergedDictionaries>
                <!-- External resources -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>
                
                <!-- Partlyx resources -->
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/DefaultResources.xaml"/>
                <ResourceDictionary Source="/Styles/CommonStylesDictionary.xaml"/>
                <ResourceDictionary Source="/Styles/FavsScrollViewer.xaml"/>


                
            </ResourceDictionary.MergedDictionaries>
            


        </ResourceDictionary>
    </Application.Resources>
</Application>
