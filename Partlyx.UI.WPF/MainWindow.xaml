<Window x:Class="Partlyx.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Partlyx.UI.WPF"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:viewmodel="clr-namespace:Partlyx.ViewModels;assembly=Partlyx.ViewModels"
        mc:Ignorable="d"
        Title="Partlyx" Height="720" Width="1280"
        MinHeight="640" MinWidth="968"
        Icon="/Images/Partlyx.ico"
        WindowState="Maximized"
        Background="{StaticResource PxWhiteBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel>
            <Menu DataContext="{Binding MenuPanel}">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem Header="File" DataContext="{Binding FileMenu}">
                    <MenuItem Header="Create" Command="{Binding NewFileCommand}"/>
                    <MenuItem Header="Save" Command="{Binding SaveProjectCommand}"/>
                    <MenuItem Header="Save as..." Command="{Binding SaveProjectAsCommand}"/>
                    <MenuItem Header="Open" Command="{Binding OpenProjectCommand}"/>
                </MenuItem>
            </Menu>

        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>
            <local:ResourceListView DataContext="{Binding ResourceList}" 
                                Grid.Row="0" Grid.Column="0" />

            <UniformGrid Grid.Column="2" Rows="2">
                <local:RecipeListView DataContext="{Binding RecipeList}"/>

            </UniformGrid>
        </Grid>
    </Grid>

</Window>
