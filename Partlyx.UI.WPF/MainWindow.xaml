<Window x:Class="Partlyx.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Partlyx.UI.WPF"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:viewmodel="clr-namespace:Partlyx.ViewModels;assembly=Partlyx.ViewModels"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Partlyx" Height="720" Width="1280"
        MinHeight="640" MinWidth="968"
        Icon="/Images/Partlyx.ico"
        WindowState="Maximized"
        Background="{StaticResource PxWhiteBrush}">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel>
                <Menu DataContext="{Binding MenuPanel}" Background="{StaticResource PxBlue0Brush}">
                    <Menu.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </Menu.ItemsPanel>
                    <MenuItem Header="File" DataContext="{Binding FileMenu}" Height="32">
                        <MenuItem Header="Create" Command="{Binding NewFileCommand}" Style="{StaticResource CommonMenuItem}"/>
                        <MenuItem Header="Save" Command="{Binding SaveProjectCommand}" Style="{StaticResource CommonMenuItem}"/>
                        <MenuItem Header="Save as..." Command="{Binding SaveProjectAsCommand}" Style="{StaticResource CommonMenuItem}"/>
                        <MenuItem Header="Open" Command="{Binding OpenProjectCommand}" Style="{StaticResource CommonMenuItem}"/>
                    </MenuItem>
                </Menu>

            </DockPanel>

            <Grid Grid.Row="1" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="360"/>
                </Grid.ColumnDefinitions>
                <local:PartsTree DataContext="{Binding PartsTree}" 
                                Grid.Row="0" Grid.Column="0" />

                <UniformGrid Grid.Column="2" Rows="2">
                </UniformGrid>
            </Grid>
        </Grid>

        <md:DialogHost Identifier="RootDialog" CloseOnClickAway="False">
        </md:DialogHost>
    </Grid>



</Window>
