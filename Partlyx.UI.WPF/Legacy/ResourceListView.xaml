<UserControl x:Class="Partlyx.UI.WPF.ResourceListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:beh="clr-namespace:Partlyx.UI.WPF.Behaviors"
             xmlns:local="clr-namespace:Partlyx.UI.WPF"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
             xmlns:fa="http://schemas.fontawesome.io/icons/">
    <Grid Background="{StaticResource PxBlue0Brush}" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Grid Height="48">
                <Rectangle Fill="{StaticResource PxBlue0Brush}" RadiusX="8" RadiusY="8" StrokeThickness="4" Stroke="{StaticResource PxBlue1Brush}"/>
                <TextBlock Text="Resources" Foreground="{StaticResource PxBlackBrush}" FontSize="32" TextAlignment="Center" FontStyle="Italic" DockPanel.Dock="Top"/>
            </Grid>
            <TextBox Style="{StaticResource CommonSearchTextBox}"
                     md:HintAssist.Hint="Search..." Grid.Row="0"
                     Text="{Binding Search.SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="8, 4, 8, 4"/>
        </StackPanel>

        <Grid Grid.Row="1" HorizontalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource FavsScrollViewer}">
                <ListView ItemsSource="{Binding Resources}" 
                          dd:DragDrop.IsDragSource="True"
                          dd:DragDrop.IsDropTarget="True"
                          beh:SelectionBehavior.BindableSelectedItems="{Binding DataContext.SelectedParts.Resources, RelativeSource={RelativeSource AncestorType=Window}}"
                          HorizontalContentAlignment="Stretch" Margin="0,0,10,0" Style="{StaticResource CommonListView}" BorderThickness="0" Background="{StaticResource PxBlue0Brush}">
                    
                    <i:Interaction.Behaviors>
                        <beh:CollectionViewFilterBehavior Predicate="{Binding Search.SearchByName}"/>
                        <beh:SelectOnMouseUpBehavior/>
                    </i:Interaction.Behaviors>
                    <ListView.InputBindings>
                        <KeyBinding Key="F2" Command="{Binding Service.StartRenamingSelectedCommand}"/>
                        <KeyBinding Key="Enter" Command="{Binding Service.StartRenamingSelectedCommand}"/>
                    </ListView.InputBindings>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical" HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Stretch" Margin="4,2,4,2" Height="32">
                                <Rectangle Fill="{StaticResource PxWhiteBrush}" RadiusX="8" RadiusY="8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Fill="{StaticResource PxBlue0Brush}" Width="24" Height="24" Margin="4"/>
                                    <TextBlock Text="{Binding Name}" Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource CommonTextBlock}"
                                               Visibility="{Binding Ui.IsRenaming, Converter = {StaticResource InverseBoolToVisConv}}">
                                        <TextBlock.InputBindings>
                                            <MouseBinding Gesture="LeftDoubleClick"
                                                          Command="{Binding Ui.StartRenamingCommand}"/>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                    <TextBox Text="{Binding Ui.UnConfirmedName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Grid.Column="1"
                                             Visibility="{Binding Ui.IsRenaming, Converter={StaticResource BoolToVisConv}}">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding Ui.CommitNameChangeCommand}"/>
                                            <KeyBinding Key="Esc" Command="{Binding Ui.CancelNameChangeCommand}"/>
                                        </TextBox.InputBindings>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="LostKeyboardFocus">
                                                <i:InvokeCommandAction Command="{Binding Ui.CommitNameChangeCommand}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <i:Interaction.Behaviors>
                                            <beh:FocusBehavior IsFocused="{Binding Ui.IsRenaming, Mode=TwoWay}"
                                                               SelectAllOnFocus="True"/>
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button HorizontalAlignment="Stretch" Style="{StaticResource BaseButtonStyle}" Command="{Binding Service.CreateResourceCommand}" Grid.Column="0">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" Margin="8">
                        <TextBlock Text="Create "/>
                        <fa:ImageAwesome Icon="Plus" Width="15" Foreground="{StaticResource PxBlackBrush}"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource BaseButtonStyle}" Width="Auto" Grid.Column="1">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" Margin="8">
                        <TextBlock Text="Options "/>
                        <fa:ImageAwesome Icon="Gear" Width="15" Foreground="{StaticResource PxBlackBrush}"/>
                    </StackPanel>
                </Button.Content>
            </Button>

        </Grid>
    </Grid>
</UserControl>
